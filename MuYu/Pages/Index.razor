    <div class="numinfo" style="display:@(ShowSetting?"flex":"none")">
        <p>总敲击：<span>@AllNum</span>&nbsp;&nbsp;今日：<span>@TodayNum</span></p>
    </div>
</div>
<div id="tips"></div>
<img id="img" src="/images/muyu.svg" style="height:100%;max-width:100%" @onclick="ClickHandler" />
<SettingMenu NavData="@NavData" Show="@ShowSetting" OnMenuClick="SettingMenuClick"></SettingMenu>


@code{

    /// <summary>
    /// 设置菜单显示
    /// </summary>
    private bool ShowSetting = false;
    /// <summary>
    /// 设置菜单
    /// </summary>
    private string[] NavData = { "自动模式","文字设置","重置计数","关于软件" };
    /// <summary>
    /// 获取初始的悬浮文字
    /// </summary>
    private string tipsInfo = Preferences.Default.Get("tips", "功德+1");


    async Task ClickHandler()
    {
        await JS.InvokeAsync<string>("PlayAudioFile", tipsInfo);
        AddNum();
    }

    async Task SetTips()
    {
        string result = await Application.Current.MainPage.DisplayPromptAsync("悬浮文字设置", "请设置敲击后的自定义悬浮文字", "确定", "取消", "请输入悬浮文字", 7, null, tipsInfo);
        if (string.IsNullOrWhiteSpace(result)) return;
        Preferences.Default.Set("tips", result);
        tipsInfo = result;
    }

    async Task SettingMenuClick(int inx)
    {
        switch (inx)
        {
            case 0://自动切换
                break;
            case 1:
                ShowSetting = false;
                await SetTips();
                break;
        }
    }


    #region 敲击计数

    private long AllNum = 0;
    private long TodayNum = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            AllNum = Preferences.Default.Get("all_num", 0L);
            if (DateTime.Now.ToShortDateString() == Preferences.Default.Get("today",""))
            {
                TodayNum = Preferences.Default.Get("today_num", 0L);
            }
        }
    }


    void AddNum()
    {
        // 当前日期
        var today = DateTime.Now.ToShortDateString();
        // 存储的日期
        string save_today = Preferences.Default.Get("today", "");

        // 天数未发生变更，防的就是半夜敲的
        if (save_today == today)
        {
            TodayNum++;
        }else{
            TodayNum = 1;
            Preferences.Default.Set("today", today);
        }

        AllNum++;
        
        Preferences.Default.Set("today_num", TodayNum);
        Preferences.Default.Set("all_num", AllNum);
    }

    #endregion
}